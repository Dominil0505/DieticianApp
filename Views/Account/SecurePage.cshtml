@using Microsoft.AspNetCore.Identity

<!-- A menü vagy egyéb tartalom megjelenítése az aktuális szerep alapján -->
@if (User.IsInRole("Dietician"))
{
    <div>
        <!-- Dietetikusoknak szánt menü -->
        <p>Welcome, Dietician!</p>
        <!-- További dietetikusoknak szánt tartalom -->
    </div>
}
else if (User.IsInRole("Admin"))
{
    <div>
        <!-- Adminisztrátoroknak szánt menü -->
        <p>Welcome, Admin!</p>
        <!-- További adminisztrátoroknak szánt tartalom -->
    </div>
}
else if (User.IsInRole("Patient"))
{
    <div>
        <!-- Pácienseknek szánt menü -->
        <p>Welcome, Patient!</p>
        <!-- További pácienseknek szánt tartalom -->
    </div>
}
else
{
    <div>
        <!-- Nem bejelentkezett felhasználóknak -->
        <p>Please log in to access content.</p>
    </div>
}
