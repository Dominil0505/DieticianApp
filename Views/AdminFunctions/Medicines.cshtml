@model DieticianApp.Models.ViewModel.AdminFunctions.AddMedicinesViewModel

<div class="container">
    <div class="row py-5">
        <div class="col-xl-10">
            <div class="bg-light rounded mb-4">
                <div class="row g-2">
                    <div class="col">
                        <form>
                            <select class="form-select">
                                <option>Sort</option>
                                <option>Descading</option>
                                <option>Asceding</option>
                            </select>
                        </form>
                    </div>
                    <div class="col">
                        <form>
                            <div class="input-group overflow-hidden">
                                <input type="text" class="form-control" placeholder="Search ....">
                                <span class="input-group-text auth-input"><a href=""><i class="fa-solid fa-magnifying-glass"></a></i></span>
                            </div>
                        </form>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalMedicine">
                            Add new Medicine
                        </button>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="modal fade" id="modalMedicine" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Add new Medicine</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form asp-controller="AdminFunctions" asp-action="AddMedicine" method="post">
                                        <div class="modal-body">
                                            <label class="form-label">Medicine name: </label>
                                            <input class="form-control" asp-for="Medicine_Name" />
                                        </div>
                                        <div class="modal-footer justify-content-center">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary" id="addMedicine">Add</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <span asp-validation-for="Medicine_Name" class="text-danger"></span>


                    @if (TempData["MedicineUsed"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["MedicineUsed"]
                        </div>

                    }
                </div>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Medicine name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @if (Model.Medicines != null && Model.Medicines.Any())
                    {
                        foreach (var medicine in Model.Medicines)
                        {
                            <tr>
                                <th scope="row">@medicine.Medicine_Id</th>
                                <td>@medicine.Medicine_Name</td>
                                <td>
                                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalDelete-@medicine.Medicine_Id">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                    <button class="btn btn-success" type="submit" data-bs-toggle="modal" data-bs-target="#modalEdit-@medicine.Medicine_Id">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                    <div class="modal fade" id="modalDelete-@medicine.Medicine_Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Medicine</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure to delete <b>@medicine.Medicine_Name</b>?
                                                </div>
                                                <form asp-controller="AdminFunctions" asp-action="DeleteMedicine" method="post" asp-route-id="@medicine.Medicine_Id">
                                                    <div class="modal-footer justify-content-center">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-danger" id="DeleteMedicine">Delete</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal fade" id="modalEdit-@medicine.Medicine_Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit medicine</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <form asp-controller="AdminFunctions" asp-action="EditMedicine" method="post" asp-route-id="@medicine.Medicine_Id">
                                                    <div class="modal-body">
                                                        <label class="form-label">Medicine name: </label>
                                                        <label class="form-label">@medicine.Medicine_Name</label>
                                                        <input class="form-control" asp-for="Medicine_Name" />
                                                    </div>
                                                    <div class="modal-footer justify-content-center">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="submit" class="btn btn-success" id="SaveNewAllergy">Save</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">No Medicine found.</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            var deleteToastEl = document.getElementById('deleteToast');
            var addToastEl = document.getElementById('addToast')

            if (deleteToastEl && @Html.Raw(Json.Serialize(TempData["MessageDelete"] != null))) {
                var deleteToast = new bootstrap.Toast(deleteToastEl);
                deleteToast.show();
            }

            if (addToastEl && @Html.Raw(Json.Serialize(TempData["MessageAdded"] != null))) {
                var addToast = new bootstrap.Toast(addToastEl);
                addToast.show();
            }
        });

    </script>
}

<div class="toast position-fixed bottom-0 end-0 p-3 text-bg-danger m-3" role="alert" aria-live="assertive" aria-atomic="true" id="deleteToast">
    <div class="d-flex">
        <div class="toast-body">
            <i class="fa-solid fa-trash"></i>
            @if (TempData["MessageDelete"] != null)
            {
                @TempData["MessageDelete"]
            }
        </div>
        <button type="button" class="btn-close me-2 m-auto btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

<div class="toast position-fixed bottom-0 end-0 p-3 text-bg-success m-3" role="alert" aria-live="assertive" aria-atomic="true" id="addToast">
    <div class="d-flex">
        <div class="toast-body">
            @if (TempData["MessageAdded"] != null)
            {
                @TempData["MessageAdded"]
            }
        </div>
        <button type="button" class="btn-close me-2 m-auto btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

