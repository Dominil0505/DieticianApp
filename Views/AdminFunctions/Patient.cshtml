@model DieticianApp.Models.ViewModel.AdminFunctions.PatientViewModel

<div class="container">
    <div class="row py-5">
        <div class="col-xl-10">
            <div class="mb-4">
                <div class="row g-2">
                    <div class="col">
                        <form>
                            <select class="form-select">
                                <option>Sort</option>
                                <option>Descading</option>
                                <option>Asceding</option>
                            </select>
                        </form>
                    </div>
                    <div class="col">
                        <form>
                            <div class="input-group overflow-hidden">
                                <input type="text" class="form-control" placeholder="Search ....">
                                <span class="input-group-text auth-input"><a href=""><i class="fa-solid fa-magnifying-glass"></a></i></span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card bx-shadow">
                <div class="card-header">
                    <h4>Patients</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="fs-5">Patient name</th>
                                <th class="fs-5">Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            @if (Model?.Patients != null && Model.Patients.Any())
                            {
                                foreach (var patient in Model.Patients)
                                { 
                                    <tr>
                                        <td class="fs-5"> @patient.User.User_Name </td>
                                        <td class="fs-5">
                                            <a class="" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><i class="fa-solid fa-ellipsis-vertical"></i></a>
                                            <ul class="dropdown-menu align-items-center">
                                                <li>
                                                    <a class="dropdown-item link-danger" href="" data-bs-toggle="modal"  data-bs-target="#modalDelete-@patient.Patient_Id" >
                                                        Delete <i class="fa-solid fa-trash"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item link-success" href="" type="submit" data-bs-toggle="modal" data-bs-target="#modalEdit-@patient.Patient_Id">
                                                        Set Patient <i class="fa-solid fa-plus"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="modal fade" id="modalDelete-@patient.Patient_Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete allergy</h1>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure to delete <b>@patient.User.User_Name</b>?
                                                        </div>
                                                        <form asp-controller="Patient" asp-action="DeletePatient" method="post" asp-route-id="@patient.Patient_Id">
                                                            <div class="modal-footer justify-content-center">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal fade" id="modalEdit-@patient.Patient_Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Set Dietitian</h1>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <form asp-controller="Patient" asp-action="SelectDietitan" method="post" asp-route-id="@patient.Patient_Id">
                                                            <div class="modal-body">
                                                                <label class="form-label">Dietician</label>
                                                                <select id="multiSelect" class="selectpicker form-control mb-2" data-live-search="true" title="Choose dietitian..." asp-for="@Model.Selected_Dietitan">
                                                                    @foreach (var dietitian in Model.Dieticians)
                                                                    {
                                                                        <option value="@dietitian.Dietician_Id">
                                                                            @dietitian.Users.User_Name
                                                                        </option>
                                                                    }
                                                                </select>
                                                            </div>
                                                            <div class="modal-footer justify-content-center">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                <button type="submit" class="btn btn-success" id="SaveNewAllergy">Save</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3">No Patients found.</td>
                                </tr>
                            } 
                        </tbody>
                    </table>
                </div>
                <nav class="nav justify-content-center">
                    <ul class="pagination">
                        @if (Model?.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("ListPatient", new { pageNumber = Model.CurrentPage - 1 })">Previous</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model?.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("ListPatient", new { pageNumber = i })">@i</a>
                            </li>
                        }

                        @if (Model?.CurrentPage < Model?.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("ListPatient", new { pageNumber = Model.CurrentPage + 1 })">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            var deleteToastEl = document.getElementById('deleteToast');
            var addToastEl = document.getElementById('addToast');
            var editToastEl = document.getElementById('editToast');

            if (deleteToastEl && @Html.Raw(Json.Serialize(TempData["MessageDelete"] != null))) {
                var deleteToast = new bootstrap.Toast(deleteToastEl);
                deleteToast.show();
            }

            if (addToastEl && (@Html.Raw(Json.Serialize(TempData["MessageAdded"] != null)))) {
                var addToast = new bootstrap.Toast(addToastEl);
                addToast.show();
            }

        });
    </script>
}


<div class="toast position-fixed bottom-0 end-0 p-3 text-bg-danger m-3 fs-6" role="alert" aria-live="assertive" aria-atomic="true" id="deleteToast">
    <div class="d-flex">
        <div class="toast-body">
            <i class="fa-solid fa-trash"></i>
            @if (TempData["MessageDelete"] != null)
            {
                @TempData["MessageDelete"]
            }
        </div>
        <button type="button" class="btn-close me-2 btn-close-white m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

<div class="toast position-fixed bottom-0 end-0 p-3 m-3 fs-6 text-bg-success" role="alert" aria-live="assertive" aria-atomic="true" id="addToast">
    <div class="d-flex">
        <div class="toast-body">
            @if (TempData["MessageAdded"] != null)
            {
                <i class="fa-solid fa-check"></i>
                @TempData["MessageAdded"]
            }
        </div>
        <button type="button" class="btn-close me-2 btn-close-white m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>
