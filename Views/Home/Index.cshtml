@{
    ViewData["Title"] = "Home Page";
}

@if (Context.User.Identity.Name != null)
{
    @if (User.IsInRole("Patient"))
    {
        <h1>Welcome, Patient</h1>
    }
    @if (User.IsInRole("Admin"))
    {
        <h1>Welcome, Admin</h1>
    }
    @if (User.IsInRole("Dietician"))
    {
        <h1>Welcome, Dietician</h1>
    }
}
else
{
    <div class="hero section dark-background @(Context.User.Identity.Name != null ? "margin-left-minus" : "")">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-6 order-lg-1 d-flex flex-column justify-content-center order-2">
                    <h1 class="text-4xl"> Digital Dietician solution </h1>
                    <h3>Help for manage patient online</h3>
                </div>
                <div class="col-lg-6 order-lg-2 flex-column justify-content-center order-1">
                    <img src="~/Images/dieticianPic.png" />
                </div>
            </div>
        </div>
    </div>
}
