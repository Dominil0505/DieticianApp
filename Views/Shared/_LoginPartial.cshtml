@if(Context.User.Identity.Name != null)
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text">
                Hello @Context.User.Identity.Name!
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="RegistrationDietician">Registration as Dietician</a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="RegistrationPatient">Registration as Patient</a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="LoginDietician">Login as Dietician</a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="LoginPatient">Login as Patient</a></li>
    </ul>
}