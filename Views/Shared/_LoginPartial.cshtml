@if (Context.User.Identity.Name != null)
{
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            @if (User.IsInRole("Patient"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="#about">Diet</a>
                </li>
            }

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Food" asp-action="ListFood"> Foods </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Allergy" asp-action="ListAllergy"> Allergies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Ingredient" asp-action="ListIngredient"> Ingredients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Medicine" asp-action="ListMedicine"> Medicines</a>
                </li>   
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Disease" asp-action="ListDisease"> Disease </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Patient" asp-action="ListPatient"> Patients</a>
                </li>
            }

            @if (User.IsInRole("Dietician"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="#about">Diet</a>
                </li>
            }
        </ul>
    </div>
    <span class="navbar-text">
        <div class="nav navbar-right">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Hello @Context.User.Identity.Name!</a>
                        <ul class="dropdown-menu" style="margin-left: -35px;">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Profile">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li class="text-center">
                                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" style="display: flex; justify-content: center;">
                                    <button type="submit" class="btn btn-outline-primary" style="padding: 5px 30px 5px 30px;">Log out</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </span>

}
else
{
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li><a class="nav-link text-white" asp-controller="Account" asp-action="Registration">Registration</a></li>
            <li><a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a></li>
        </ul>
    </div>
}