@if (Context.User.Identity.Name != null)
{
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link text-white" href="#">About</a>
            </li>
            @if (User.IsInRole("Patient"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="#about">Diet</a>
                </li>
            }

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="#about"> Patients </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href=""> Foods </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="AdminFunctions" asp-action="Allergy"> Allergies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href=""> Ingredients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="AdminFunctions" asp-action="AddPatient"> Patients</a>
                </li>
            }

            @if (User.IsInRole("Dietician"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" href="#about">Diet</a>
                </li>
            }
        </ul>
    </div>
    <span class="navbar-text">
        <div class="nav navbar-right">
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Hello @Context.User.Identity.Name!</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Profile">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                <button type="submit" class="dropdown-item btn btn-link navbar-btn navbar-link">Log out</button>
                            </form>

                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </span>
}
else
{
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li><a class="nav-link text-white" asp-controller="Account" asp-action="Registration">Registration</a></li>
            <li><a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a></li>
        </ul>
    </div>
}
